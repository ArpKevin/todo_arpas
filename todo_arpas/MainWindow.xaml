<Window x:Class="todo_arpas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo_arpas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listboxTesztadatok" Width="100" Height="200" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtboxBevitel" HorizontalAlignment="Left" Margin="559,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDelAll" Content="Tesztadatok törlése" HorizontalAlignment="Left" Margin="603,340,0,0" VerticalAlignment="Top" Padding="20px 10px" Click="btnDelAll_Click"/>
        <Button x:Name="btnAdd" Content="Hozzáadás" HorizontalAlignment="Left" Margin="575,158,0,0" VerticalAlignment="Top" Padding="15px 10px" Click="btnAdd_Click"/>
        <Button x:Name="btnTorles" Content="Törlés" HorizontalAlignment="Left" Margin="603,235,0,0" VerticalAlignment="Top" Padding="20px 10px" Click="btnTorles_Click"/>

    </Grid>
</Window>
